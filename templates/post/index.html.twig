{% extends 'base.html.twig' %}

{% block title %}All Posts!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container">
    <h2 class="form-inline my-2 my-lg-0">All Posts </h2>
        <a href="{{ path('post.create') }}" class="text-primary float-right !important">Add Post</a>

    </div>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-striped">
        <thead>
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Description</td>
            <td>Action</td>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
        <tr>
            <td>{{ post.id }}</td>
            <td>{{ post.title }}</td>
            <td>{{ post.description }}</td>
            <td>
                <a href="{{ path('post.show',{id:post.id}) }}" class="text-primary">Show</a>
                <a  class="text-secondary">Edit</a>
                <a href="{{ path('post.delete',{id:post.id}) }}" class="text-danger">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
